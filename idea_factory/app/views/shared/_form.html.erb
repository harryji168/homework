<div class="container mt-4">
<%= form_with model: @idea, :class=>"form-group", local:true do |f|%>
    <%if @idea.errors.any?%>
        <p class="text-danger"><%= @idea.errors.full_messages.join(", ")%></p>
    <%end%>
    <%= f.label :title%>
    <div class="input-group">
        
        <%= f.text_field :title, :class=>'form-control' , autofocus: true%>
    </div>
    <%= f.label :descripion%>
    <div class="input-group">
        
        <%= f.text_area :description, cols:50 , rows:5,  :class=>'form-control' %>
    </div>
        <%= f.submit :class => 'btn btn-outline-primary mt-4'%>
<%end%>
</div>